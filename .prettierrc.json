{
  "$schema": "http://json.schemastore.org/prettierrc",
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 80,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "tabWidth": 2,
  "overrides": [
    {
      "files": [".eslintrc", ".huskyrc", ".lintstagedrc", ".prettierrc", ".commitlintrc", "*.code-snippets"],
      "options": {
        "parser": "json",
        "singleQuote": false,
        "trailingComma": "none"
      }
    }
  ]
}
